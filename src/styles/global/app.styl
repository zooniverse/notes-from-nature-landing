$md-screen-width = 640px
$sm-screen-width = 440px

$lg-left-spacer = 136px
$md-left-spacer = 120px

// colors
$lime-green = #65981e
$dark-teal = #226764

//  General
html, body
  font: 400 15px/1.5 "Open Sans", Arial, sans-serif
  margin: 0
  min-height: 100vh

body
  background: #2c2c2c
  font-family Arial, Helvetica, sans-serif
  color #333
  background-color #fff
  margin 0
  padding 0

// Typography

h1, h2, h3, h4, h5, h6, p
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased

$generic-heading
  font-size: 0.7em
  font-weight: bold
  letter-spacing: 0.1em
  opacity: 0.7
  text-transform: uppercase

// Anchors
$reset-link
  color: inherit
  text-decoration: none

  &:visited, &:active
    color: inherit

// Buttons
$reset-button
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  display: inline-block
  font: inherit
  line-height: inherit
  margin: 0
  outline: none
  padding: 0
  position: relative
  text-decoration: none

  &:disabled
    cursor: not-allowed
    opacity: 0.3

.secret-button
  @extends $reset-button

// Tables
.standard-table
  border-spacing: 0

  &.full
    width: 100%

  th
    opacity: 0.6
    text-align: left

  th,
  td
    border-bottom: 1px solid rgba(gray, 0.3)
    padding: 0.3em 1vw 0.3em 0
    vertical-align: top

  tr:last-child
    > th,
    > td
      border-bottom: 0

// Lists
$reset-unordered-list
  list-style: none
  margin: 0
  padding: 0
