.transcription-container
  padding: 40px 0

  .transcriptions
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: flex-start

    .transcription
      position: relative
      max-width: 160px
      margin: 10px 44px 10px 0

      .roll-over
        width: 100%
        top: 0
        max-height: 0
        color: white
        opacity: 0
        padding: 2px 12px 8px 12px
        position: absolute
        font-size: 14px
        font-weight: normal
        transition: all 1.25s linear
        z-index: 10

        &:hover
          max-height: 300px
          opacity: 1
          background-color: rgba(0, 0, 0, 0.7)
          color: white
          transition: all 0.75s linear

        h4
          margin: 0 0 4px 0

      img
        height: 120px
        border 2px solid $lime-green
