.expedition-group
  background-color: #202020

  .title
    display: flex
    align-items: center
    flex-flow: column

    .project-name
      padding-top: 40px

    a
      text-decoration: none

      h1
        color: #ddd
        margin-top: 0
        text-align: center

  hr
    margin: 20px 10px 30px 10px

  .tiles
    display: flex
    align-items: center
    flex-flow: row
    flex-wrap: wrap
    justify-content: space-around

    .tile
      position: relative
      max-width: 320px
      max-height: 320px
      font-weight: bold
      text-align: center
      align-self: center
      font-size: 20px
      padding-bottom: 20px

      .snippet
        padding: 12px
        position: absolute
        top: 0
        max-height: 0
        font-size: 14px
        font-weight: normal
        color: rgba(0, 0, 0, 0)
        transition: all 1.25s linear

      .snippet:hover, &:hover .snippet
        background-color: rgba(0, 0, 0, 0.7)
        max-height: 200px
        color: white
        transition: all 0.75s linear

      a
        display: flex
        flex-flow: column
        text-decoration: none
        color: #96f132

        span
          height: 60px

    img
      height: 240px
      width: 100%
