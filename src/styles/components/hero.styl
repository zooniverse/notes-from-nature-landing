.hero

  svg.nfn-logo
    position: absolute
    height: 240px
    top: 0
    left: 8px
    fill: rgba(0, 0, 0, 0)
    stroke: lightgray

  h2, h3, h4
    color: white
    text-align: left
    margin: 0 0 0 120px
    padding: 0

    &.title
      margin-top: 48px

    &.subtitle
      margin-top: 16px
      font-size: 20px
      text-transform: uppercase

  @media screen and (max-width: 640px)
    svg.nfn-logo
      height: 180px

    h2, h3, h4
      margin: 16px 0 0 80px

      &.title
        margin-top: 16px
        font-size: 24px

      &.subtitle
        margin-top: 4px
        font-size: 16px
