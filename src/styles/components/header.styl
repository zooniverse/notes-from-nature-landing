.landing-header
  font-size: 12px
  color: white
  flex: 1
  display: flex
  flex-direction: row
  flex-wrap: wrap

  .header-links
    flex: 8
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-content: center
    padding-top: 10px
    padding-bottom: 10px

    a
      color: white
      flex: 1
      text-align: center
      text-decoration: none
      align-self: center
      padding-right: 5px
      margin-bottom: 8px

      &:hover
        color: #96f132
        text-decoration: underline

    a.wide
      flex: 3

    .active
      font-weight: bold

    .first
      flex: 3
      text-align: right
      padding-right: 1em

    .last
      flex: 4
      text-align: left
      padding-left: 1em

  .login-info
    flex: 2
    text-align: center
    align-self: center

    button
      color: white
      background-color: rgba(32, 32, 32, 0.6)
      border: none

      &:hover
        color: #96f132
        text-decoration: underline

  @media screen and (max-width: 440px)
    .first
      text-align: center

    .last
      display: none

  &.opaque
    background-color: black

  &.translucent
    background-color: rgba(32, 32, 32, 0.6)

  &.transparent
    background-color: rgba(0, 0, 0, 0.0)

    .login-info button
      background-color: rgba(0, 0, 0, 0.0)
