.landing-header
  font-size: 12px
  color: white
  flex: 1
  display: flex
  flex-flow: row
  background-color: rgba(32, 32, 32, 0.6)

  .header-links
    flex: 8
    display: flex
    flex-flow: row
    align-content: center
    padding-top: 10px
    padding-bottom: 10px

    a
      color: white
      flex: 1
      text-align: center
      text-decoration: none
      align-self: center

      &:hover
        color: #96f132

    .first
      flex: 3
      text-align: right
      padding-right: 1em
      font-weight: bold

    a.last
      flex: 4
      text-align: left
      padding-left: 1em

  .login-info
    flex: 2
    text-align: center
    align-self: center
