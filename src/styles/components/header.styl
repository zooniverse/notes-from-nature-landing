.header
  margin: 8px 8px 0 72px
  font-size: 12px
  color: white
  display: flex
  flex-direction: row
  flex-wrap: wrap
  align-content: space-between

  a
    flex: 1
    color: white
    text-align: center
    text-decoration: none
    align-self: flex-end
    margin: 0 4px

    &.wide
      flex: 3

  a:hover,
  .login-info button:hover
    color: #96f132
    text-decoration: underline

  .login-info
    align-self: flex-end

    button
      color: white
      background-color: rgba(0, 0, 0, 0.0)
      border: none

  @media screen and (max-width: 440px)
    margin: 8px 8px 0 60px

    a
      padding-top: 4px

    a.remove
      display: none
