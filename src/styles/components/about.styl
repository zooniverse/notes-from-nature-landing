.about
  font-family: helvetica
  flex-wrap: wrap
  background: white

  .title
    font-size: 27px

  .subtitle
    font-size: 15px
    padding-left: 1em
    font-weight: normal

  .about-content
    padding: 0 60px 0 20px

    h3
      padding: 10px 0 5px 0

    .paragraph-and-image
      display: flex
      flex-direction: row

      img
        border: 4px solid #ccc
        height: 100%

      p
        flex: 1

    a
      color: black
      text-decoration: none
      padding-left: 4px

    p
      margin: 0 10px

    .museums
      display: flex
      flex-direction: row
      justify-content: space-around
      align-items: center
      padding-bottom: 10px

      a
        text-align: center
        flex: 1

        img
          height: 60px
