.reasons
  background-color: #ececec
  text-align: center
  padding: 0 2em 1em 2em

  h3.reasons-title
    margin: 24px 64px
    font-size: x-large
    color: #65981e
    border-bottom: 2px dotted #65981e

  .reason
    display: flex
    flex-direction: row
    flex-wrap: wrap

    > div
      padding 1em
      flex: 1

      > h3
        min-height: 52px
        margin-bottom: 0
        font-weight: bold

      > p
        margin-top: 8px

    img
      border-radius: 67px
      height: 100px
