.landing-app
  background-color: #e1e1e1

  .landing
    display: flex;
    flex-direction: column;
    height: 100%;

    .hero
      background: url("../images/landing/home.jpg")
      display: flex
      flex-direction: column
      min-height: 500px

      .landing-header
        font-size: 12px
        color: white
        flex: 1
        display: flex
        flex-flow: row
        background-color: rgba(32, 32, 32, 0.6)

        .header-links
          flex: 8
          display: flex
          flex-flow: row
          align-content: center

          a, span
            color: white
            flex: 1
            text-align: center
            text-decoration: none
            align-self: center

          a:hover
            color: #96f132

          span.first
            flex: 3
            text-align: right
            padding-right: 1em
            font-weight: bold
            text-decoration: underline solid #96f132

          a.last
            flex: 4
            text-align: left
            padding-left: 1em

        .login-info
          flex: 2
          text-align: center
          align-self: center

      .landing-title
        color: white
        display: flex
        flex-flow: column
        text-align: center
        flex: 8
        align-items: center
        background-color: rgba(32, 32, 32, 0.2)

        .action
          display: flex
          font-size: 18px
          font-weight: bold
          flex: 2

          span
            flex: 1
            align-self: flex-end

        hr
          width: 5em
          flex: 1

        .tagline
          font-weight: bold
          font-size: 40px
          flex: 2

          span.smaller
            font-weight: normal
            font-size: 22px

      .links
        padding: 0 20px 0 40px
        display: flex
        flex: 3
        align-items: center
        flex-flow: row
        background-color: rgba(32, 32, 32, 0.7)
        text-align: center

        a
          flex: 1

          svg
            background-color: #96f132
            border-radius: 50px
            stroke: #226764
            fill: #226764

            &:hover
              background-color: #226764
              stroke: white
              fill: white

      .counters
        background-color: rgba(32, 32, 32, 0.9)
        align-items: center
        flex: 1
        display: flex
        flex-flow: row
        text-align: center
        color: white

        > div
          flex: 1

    .why
      text-align: center

      .reasons
        display: flex
        flex-flow: row

        > div
          flex: 1

        img
          border-radius: 67px
