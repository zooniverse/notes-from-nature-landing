.landing
  background-color: #e1e1e1

  .hero
    background: url("../images/landing/home.jpg")
    display: flex
    flex-direction: column

    .landing-title
      color: white
      display: flex
      flex-flow: column
      align-items: center
      background-color: rgba(32, 32, 32, 0.2)
      padding: 80px 0

      .title
        padding: 0

      .action
        font-size: 18px
        font-weight: bold

      hr
        width: 5em

    .genera
      background-color: rgba(32, 32, 32, 0.7)
      text-align: center
      padding-bottom: 20px

      h3
        color: white

      .links
        padding: 0 20px 0 40px
        display: flex
        flex-flow: row
        flex-wrap: wrap

        a
          flex: 1

    .counters
      background-color: rgba(32, 32, 32, 0.9)
      align-items: center
      flex: 1
      display: flex
      flex-flow: row
      text-align: center
      color: white
      padding-bottom: 10px

      > div
        flex: 1

      .numbers
        font-size: xx-large

  .why
    text-align: center
    padding: 0 2em 1em 2em

    h3.reasons-title
      font-size: xx-large
      color: black

    .reasons
      display: flex
      flex-flow: row

      > div
        padding 1em
        flex: 1

      img
        border-radius: 67px
