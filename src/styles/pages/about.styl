.about
  font-family: helvetica
  flex-wrap: wrap
  background: white

  .about-title
    font-size: 27px
    padding-left: 1em

    .title
      color: black

  .about-content
    padding: 0 60px 0 20px

    h3
      padding: 10px 0 5px 0

    .paragraph-and-image
      display: flex
      flex-direction: row

      img
        border: 4px solid #ccc
        height: 100%

      p
        flex: 1

    a
      color: black
      text-decoration: none
      padding-left: 4px

    p
      margin: 0 10px
      margin-bottom: 1em;
