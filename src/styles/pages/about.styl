.about
  font-family: helvetica
  background-color: #ededed
  display: flex
  flex-direction: column
  flex-wrap: wrap

  .hero
    background: url("../images/background/landing.jpg")

  .about-content
    padding: 0 20px

    img
      float: right
      border: 4px solid #ccc
      height: 100%
      margin: 0 0 4px 8px

    h3
      padding: 10px 0 4px 0

    .paragraph-and-image
      flex-direction: row

    p
      margin: 0 10px
      padding: 4px 0
      margin-bottom: 1em;

    @media screen and (max-width: 420px)
      img
        width: 200px
        margin-bottom: 8px
        float: none
