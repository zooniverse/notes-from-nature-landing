.about
  font-family: helvetica
  background-color: #ededed
  display: flex
  flex-direction: column
  flex-wrap: wrap

  .hero
    background: url("../images/background/landing.jpg")

  .about-content
    padding: 0 40px 0 $lg-left-spacer

    @media screen and (max-width: $md-screen-width)
      padding-left: 32px

    img
      float: right
      border: 4px solid #ccc
      margin: 0 0 4px 8px

    h3
      padding: 10px 0 4px 0

    .paragraph-and-image
      flex-direction: row

    p
      margin-right: 10px
      padding: 4px 0
      margin-bottom: 1em;

    @media screen and (max-width: $sm-screen-width)
      img
        width: 200px
        margin-bottom: 8px
        float: none

  .contributors
    padding-left: $lg-left-spacer
    background: linear-gradient(to bottom, #ececec, white 40%, white)

    @media screen and (max-width: $md-screen-width)
      padding-left: 32px
