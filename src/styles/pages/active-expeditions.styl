.active-expeditions
  background-color: #ededed
  display: flex
  flex-direction: column
  flex-wrap: wrap

  .hero
    background: url("../images/background/butterflies.png")

  .content
    position: relative

    .expedition-group-icon
      position: absolute
      top: -15px
      left: -30px
      height: 180px
      width: 180px
      border-radius: 100px
      background-color: rgba(0, 0, 0, 0)
      fill: rgba(0, 0, 0, 0)
      stroke: #222
      stroke-width: 1px
      border: 2px solid rgba(0, 0, 0, 0)

    .tiles
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content: flex-start
      margin: 48px 8px 48px $lg-left-spacer

      .tile
        position: relative
        max-width: 320px
        font-weight: bold
        font-size: 20px
        margin: 20px 48px 20px 0

        .snippet
          top: 0
          max-height: 0
          color: white
          opacity: 0
          padding: 12px
          position: absolute
          font-size: 14px
          font-weight: normal
          transition: all 1.25s linear

        .snippet:hover, &:hover .snippet
          max-height: 300px
          opacity: 1
          background-color: rgba(0, 0, 0, 0.7)
          color: white
          transition: all 0.75s linear

        a
          display: flex
          flex-flow: column
          text-decoration: none
          color: #65981d

          .label
            max-width: 90%

          .completeness
            font-size: 12px

        .more-info
          color: #65981d
          position: absolute
          top: 224px
          right: 0
          z-index: 10

          i:hover
            color: #c3c3c3

      img
        height: 220px
        width: 100%
        border 2px solid #65981d

  @media screen and (max-width: $md-screen-width)
    .expedition-group-icon
      display: none

    .content
      .tiles
        margin: 48px 12px 48px 32px
